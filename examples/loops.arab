// أمثلة على الحلقات التكرارية

// حلقة لكل
اطبع_سطر "--- حلقة لكل ---"
لكل عنصر في مدى(1, 6) {
    اطبع_سطر عنصر
}

// حلقة بينما
اطبع_سطر "--- حلقة بينما ---"
متغير ع = 1
بينما ع <= 5 {
    اطبع_سطر "الرقم: "
    اطبع_سطر ع
    ع = ع + 1
}

// قائمة أرقام
متغير أرقام = [1, 2, 3, 4, 5]
اطبع_سطر "--- مجموع الأرقام ---"
متغير مجموع = 0
لكل ر في أرقام {
    مجموع = مجموع + ر
}
اطبع_سطر "المجموع: "
اطبع_سطر مجموع
