// آلة حاسبة بسيطة

دالة جمع(أ, ب) {
    ارجع أ + ب
}

دالة طرح(أ, ب) {
    ارجع أ - ب
}

دالة ضرب(أ, ب) {
    ارجع أ * ب
}

دالة قسمة(أ, ب) {
    اذا ب == 0 {
        ارجع "خطأ: قسمة على صفر"
    }
    ارجع أ / ب
}

// اختبار الدوال
متغير س = 10
متغير ص = 5

اطبع_سطر "جمع: "
اطبع_سطر جمع(س, ص)
اطبع_سطر "طرح: "
اطبع_سطر طرح(س, ص)
اطبع_سطر "ضرب: "
اطبع_سطر ضرب(س, ص)
اطبع_سطر "قسمة: "
اطبع_سطر قسمة(س, ص)
