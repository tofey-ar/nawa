// اختبار شامل للغة العربية

اطبع_سطر "=== اختبار اللغة العربية ==="

// 1. المتغيرات
اطبع_سطر "--- المتغيرات ---"
متغير ن = 10
متغير ن_نص = "اختبار"
متغير ن_منطق = صحيح
ثابت ث = 100

اطبع_سطر "ن = "
اطبع_سطر ن
اطبع_سطر "ن_نص = "
اطبع_سطر ن_نص
اطبع_سطر "ن_منطق = "
اطبع_سطر ن_منطق
اطبع_سطر "ث = "
اطبع_سطر ث

// 2. العمليات الحسابية
اطبع_سطر "--- العمليات الحسابية ---"
متغير أ = 20
متغير ب = 5

اطبع_سطر "أ + ب = "
اطبع_سطر أ + ب

اطبع_سطر "أ - ب = "
اطبع_سطر أ - ب

اطبع_سطر "أ * ب = "
اطبع_سطر أ * ب

اطبع_سطر "أ / ب = "
اطبع_سطر أ / ب

// 3. الشروط
اطبع_سطر "--- الشروط ---"
متغير س = 15

اذا س > 10 {
    اطبع_سطر "س أكبر من 10"
}
والا {
    اطبع_سطر "س أصغر من أو تساوي 10"
}

// 4. الحلقات
اطبع_سطر "--- الحلقات ---"
اطبع_سطر "الأرقام من 1 إلى 5:"
لكل ر في مدى(1, 6) {
    اطبع_سطر ر
}

// 5. القوائم
اطبع_سطر "--- القوائم ---"
متغير قائمة = [10, 20, 30, 40, 50]
اطبع_سطر "العنصر الأول: "
اطبع_سطر قائمة[0]
اطبع_سطر "طول القائمة: "
اطبع_سطر طول(قائمة)

// 6. الدوال
اطبع_سطر "--- الدوال ---"

دالة تربيع(س) {
    ارجع س * س
}

اطبع_سطر "تربيع 5 = "
اطبع_سطر تربيع(5)

دالة ترحيب(اسم) {
    اطبع_سطر "مرحباً "
    اطبع_سطر اسم
}

ترحيب("أحمد")
ترحيب("سارة")

// 7. العمليات المنطقية
اطبع_سطر "--- العمليات المنطقية ---"
متغير عمر = 25
متغير طالب = خطأ

اذا عمر >= 18 و ليس طالب {
    اطبع_سطر "شخص بالغ وليس طالب"
}

اذا عمر < 18 او طالب {
    اطبع_سطر "قاصر أو طالب"
}
والا {
    اطبع_سطر "بالغ وليس طالب"
}

اطبع_سطر "=== انتهى الاختبار ==="
